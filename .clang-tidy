Checks: >
  bugprone-*,
  clang-analyzer-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,

  # Commonly disabled because theyâ€™re too noisy in real projects
  -modernize-use-trailing-return-type,
  -cppcoreguidelines-avoid-magic-numbers,
  -readability-magic-numbers,
  -cppcoreguidelines-pro-type-union-access,
  -cppcoreguidelines-pro-type-reinterpret-cast,
  -cppcoreguidelines-owning-memory,
  -readability-implicit-bool-conversion

# Fail CI on any warning
WarningsAsErrors: '*'

# ONLY analyze your own code and your own headers
# This regex excludes any path containing these common external folders
HeaderFilterRegex: '^((?!/usr/|/libs/|/external/|/third_party/|/build/|.*_deps/|/generated/|/imgui/|/imgui-nodes/).)*$'

# Use your .clang-format if it exists
FormatStyle: file

# Never show warnings that originate in system headers
SystemHeaders: false   # this key is still valid in 18/19 for this exact purpose

# Suppress diagnostics that come from headers included into your files (the real fix)
InheritParentConfig: true
